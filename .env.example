# Environment variables for docker-compose.azure.yml
# Copy this file to `.env` in the repo root and adjust values as needed.
# docker compose will automatically read `.env` when run from the repo root.

# Image version tags (used only by docker-compose.azure.yml)
# Set the ACR image tag to deploy for each service.
GO_CHARIOT_TAG=v0.002
CHARIOTEER_TAG=v0.002
VISUAL_DSL_TAG=v0.002
NGINX_TAG=v0.002

# Optional: database and service settings (keep real secrets out of git)
# These have safe defaults in the compose file, but you can override here.
MYSQL_ROOT_PASSWORD=change_me
MYSQL_DATABASE=chariot
MYSQL_USER=chariot
MYSQL_PASSWORD=change_me

# Azure Key Vault name used by go-chariot (firewall must allow the VM)
AZURE_VAULT_NAME=chariot-vault

# Cookie secret for charioteer session cookies
COOKIE_SECRET=94ej7QD+fY8B9q3oQztBIm2mggGoLeHuIBcgyG+FBhY=
# Azure AD / oauth2-proxy (required to enable SSO)
AZURE_TENANT_ID=82fbfa53-3046-4f39-a182-f5e0082313d4
AZURE_CLIENT_ID=ca025186-be85-4373-8b54-c299f5de741d
AZURE_CLIENT_SECRET=alY8Q~sjRXY2_WrF4dQCNmrk_vWGy61LySmSrabw
# 32-byte base64-encoded random string (not hex). Example: `openssl rand -base64 32`
OAUTH2_COOKIE_SECRET=YjEi9RMUKoQXVIWuLuCg7BLkwKBEjhVXoJVJriPWNt0=

# Path on the VM to an authenticated emails allowlist file for oauth2-proxy.
# Create the directory and file on the VM, then put one email per line.
# Example default is /home/mtheory/.oauth2-proxy/authenticated-emails.txt
OAUTH2_EMAILS_FILE=/home/mtheory/.oauth2-proxy/authenticated-emails.txt

# Notes:
# - `.env` values are used for variable substitution in compose (they are NOT
#   automatically injected into containers unless also listed under `environment:`).
