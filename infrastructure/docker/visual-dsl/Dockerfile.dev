# Multi-stage Dockerfile for Visual DSL (React/TypeScript frontend) - Development Mode

# Stage 1: Build stage
FROM node:18-alpine AS builder

WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

# Stage 2: Production stage with nginx (HTTP only for development)
FROM nginx:alpine AS production

# Install runtime dependencies
RUN apk add --no-cache curl

# Copy built React app
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy nginx configuration (HTTP only for development)
COPY ../../infrastructure/docker/visual-dsl/nginx-dev.conf /etc/nginx/conf.d/default.conf

# Expose port
EXPOSE 80

# Health check (HTTP only)
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost/ || exit 1

# Run nginx
CMD ["nginx", "-g", "daemon off;"]
