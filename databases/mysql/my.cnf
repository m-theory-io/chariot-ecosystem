[mysqld]
# Chariot-specific MySQL configuration

# Network settings
bind-address = 127.0.0.1
port = 3307

# Character set and collation
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Connection settings
max_connections = 200
connect_timeout = 60
wait_timeout = 28800
interactive_timeout = 28800

# InnoDB buffers & logs
innodb_buffer_pool_size = 256M
# innodb_log_file_size is deprecated; use redo capacity in 8.0+
innodb_redo_log_capacity = 134217728   # 128M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2

# (REMOVED) Query cache â€“ not supported in MySQL 8.0
# query_cache_type = 1
# query_cache_size = 32M
# query_cache_limit = 2M

# Logging
general_log = 0
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Binary logging
log_bin = mysql-bin
binlog_format = ROW
# expire_logs_days is deprecated in 8.0; use seconds
binlog_expire_logs_seconds = 604800     # 7 days

# JSON and modern features
innodb_strict_mode = 1

# Time zone
default-time-zone = '+00:00'

# SSL (optional)
# ssl-ca = /etc/mysql/ssl/ca.pem
# ssl-cert = /etc/mysql/ssl/server-cert.pem
# ssl-key = /etc/mysql/ssl/server-key.pem

[mysql]
default-character-set = utf8mb4

[mysqldump]
default-character-set = utf8mb4
